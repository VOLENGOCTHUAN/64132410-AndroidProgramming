<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:padding="24dp">

    <!-- Guideline á»Ÿ 33% chiá»u cao -->

    <ImageView
        android:id="@+id/imgQuayLai6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Quay láº¡i"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anh4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/guideline33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvForgotPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Láº¥y láº¡i máº­t kháº©u ðŸ”‘â“"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                style="@style/CustomTextInputLayout"
                android:id="@+id/edtEmailCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“§ Nháº­p email cá»§a báº¡n"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/hint_selector" />

            <Button
                android:id="@+id/btnGetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Láº¥y láº¡i máº­t kháº©u"
                android:layout_marginTop="20dp"
                android:backgroundTint="#007BFF"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/txtPasswordResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#D10D0D"
                android:paddingTop="16dp"
                android:textAlignment="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
