<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".file1.BangCuuChuongActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng Cửu Chương"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Card cho Bảng cửu chương Cộng -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAddition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp">
        <TextView
            android:id="@+id/btnAddition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bảng Cửu Chương Cộng"
            android:textSize="18sp"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card cho Bảng cửu chương Trừ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSubtraction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardAddition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="20dp">
        <TextView
            android:id="@+id/btnSubtraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bảng Cửu Chương Trừ"
            android:textSize="18sp"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card cho Bảng cửu chương Nhân -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMultiplication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardSubtraction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="20dp">
        <TextView
            android:id="@+id/btnMultiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bảng Cửu Chương Nhân"
            android:textSize="18sp"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card cho Bảng cửu chương Chia -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDivision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardMultiplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="20dp">
        <TextView
            android:id="@+id/btnDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bảng Cửu Chương Chia"
            android:textSize="18sp"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
